{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "jest",
      "react/next",
      "react-dom/next",
    ]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
  ],
  "typeRoots": [
    "./node_modules/@types/**/*.d.ts",
    "./src/types/*.ts",
  ]
}